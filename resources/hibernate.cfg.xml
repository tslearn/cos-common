<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">  
<hibernate-configuration>  
	<session-factory>  

		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>  
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>  
		<property name="connection.url">jdbc:mysql://127.0.0.1/wiq?useUnicode=true</property>  
		
		<property name="connection.autoReconnect">true</property> 
		<property name="connection.autoReconnectForPools">true</property> 
		<property name="connection.is-connection-validation-required">true</property> 

		<property name="hibernate.temp.use_jdbc_metadata_defaults">false</property> 
		<property name="hibernate.c3p0.maxsize">20</property> 
		<property name="hibernate.cp30.minsize">1</property> 
		<property name="hibernate.cp30.timeout">5000</property> 
		<!-- 指定连接池里最大缓存多少个Statement对象 --> 
		<property name="hibernate.cp30.max_statements">100</property> 
		<property name="hibernate.cp30.idle_test_period">3000</property> 
		<property name="hibernate.cp30.acquire_increment">2</property> 
		<property name="hibernate.cp30.validate">true</property> 
 				
		<property name="connection.username">root</property>  
		<property name="connection.password">Q0x2e7i3</property>
		
		<property name="hibernate.transaction.coordinator_class">org.hibernate.transaction.JDBCTransactionFactory</property>
        <property name="hibernate.current_session_context_class">jta</property>
        
   		<property name="hibernate.show_sql">false</property>
        <property name="hibernate.use_sql_comments">false</property>
        
		<property name="current_session_context_class">thread</property> 
		
		<!-- System -->
		<mapping class="org.companyos.dev.wiq_server.dbo.DBUser"/> 
				
		<!-- Square -->
		<mapping class="org.companyos.dev.wiq_server.dbo.DBSquare"/> 
		<mapping class="org.companyos.dev.wiq_server.dbo.DBSquareApply"/> 
		<mapping class="org.companyos.dev.wiq_server.dbo.DBSquareInvite"/> 
		<mapping class="org.companyos.dev.wiq_server.dbo.DBSquarePlayer"/>
		<mapping class="org.companyos.dev.wiq_server.dbo.DBProposal"/> 	
		<mapping class="org.companyos.dev.wiq_server.dbo.DBResponse"/> 	
		
		<!-- Exercise -->
		<mapping class="org.companyos.dev.wiq_server.dbo.DBExercise"/> 
		
		<!-- Player -->
		<mapping class="org.companyos.dev.wiq_server.dbo.DBPlayer"/> 	
				
		<!-- Match -->
		<mapping class="org.companyos.dev.wiq_server.dbo.DBMatch"/> 	
		<mapping class="org.companyos.dev.wiq_server.dbo.DBMatchSquare"/> 	
		<mapping class="org.companyos.dev.wiq_server.dbo.DBMatchPlayer"/> 
		<mapping class="org.companyos.dev.wiq_server.dbo.DBMatchReferee"/> 	

		<!-- Referee -->
		<mapping class="org.companyos.dev.wiq_server.dbo.DBReferee"/> 
		
		<!-- Stadium -->
		<mapping class="org.companyos.dev.wiq_server.dbo.DBStadium"/> 
		
		<!-- Comment -->				
		<mapping class="org.companyos.dev.wiq_server.dbo.DBComment"/> 
		<mapping class="org.companyos.dev.wiq_server.dbo.DBCommentReply"/> 
		
		<mapping class="org.companyos.dev.wiq_server.dbo.DBNotification"/> 
		<mapping class="org.companyos.dev.wiq_server.dbo.DBFinance"/> 
		<mapping class="org.companyos.dev.wiq_server.dbo.DBFeedback"/> 
		
		<mapping class="org.companyos.dev.wiq_server.dbo.DBAbuse"/> 
		<mapping class="org.companyos.dev.wiq_server.dbo.DBBlacklist"/> 
		
		<!-- Chat -->
		<mapping class="org.companyos.dev.wiq_server.dbo.DBChatGroup"/> 
		<mapping class="org.companyos.dev.wiq_server.dbo.DBChatUnit"/> 
	</session-factory>  
</hibernate-configuration>